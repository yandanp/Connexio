{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Connexio",
  "version": "0.1.0",
  "identifier": "com.connexio.terminal",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Connexio",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://github.com/yandanp/Connexio/releases/latest/download/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDAxODExNjBFRjJFMURERUYKUldUdjNlSHlEaGFCQVFiWm51ekEzUTNkQk0xVzEvNnU0cS9zUHFOWkU2RWYvWkZrKy9mSy9ncUkK"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "createUpdaterArtifacts": true,
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "installerHooks": "nsis/installer-hooks.nsh"
      },
      "allowDowngrades": true
    },
    "shortDescription": "Modern Windows terminal with session persistence",
    "longDescription": "Connexio is a modern Windows terminal emulator featuring automatic session persistence, multi-tab support, and beautiful themes. Your tabs, directories, and command history are automatically saved and restored.",
    "category": "Utility",
    "publisher": "yandanp",
    "copyright": "Copyright Â© 2026 yandanp",
    "licenseFile": null
  }
}
